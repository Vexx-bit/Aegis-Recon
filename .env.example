# Aegis Recon - Environment Configuration
# Copy this file to .env and update with your values

# API Security
API_KEY=your-secret-api-key-change-this-in-production
GROQ_API_KEY=your-groq-api-key


# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=aegis_recon
DB_USER=root
DB_PASS=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Python Scan Worker
ALLOW_SCANS=1

# Queue Worker Settings
WORKER_TIMEOUT=1800
WORKER_LOG_PATH=/tmp/queue_worker.log

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Logging
LOG_LEVEL=info
LOG_PATH=/tmp/aegis_recon.log
